<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                      https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Softspring\Subscription\Model\Subscription" table="plan">

        <indexes>
            <index name="platform_id_idx" columns="platform_id"/>
        </indexes>

        <field name="platform" column="platform" type="smallint" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="platformId" column="platform_id" type="string" nullable="true" />

        <field name="testMode" column="platform_test_mode" type="boolean" nullable="false">
            <options>
                <option name="default">0</option>
            </options>
        </field>

        <many-to-one field="client" target-entity="Softspring\Subscription\Model\ClientInterface" inversed-by="subscriptions">
            <join-column name="client_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

        <many-to-one field="product" target-entity="Softspring\Subscription\Model\ProductInterface">
            <join-column name="product_id" referenced-column-name="id" on-delete="RESTRICT" />
        </many-to-one>

        <many-to-one field="plan" target-entity="Softspring\Subscription\Model\PlanInterface">
            <join-column name="plan_id" referenced-column-name="id" on-delete="RESTRICT" />
        </many-to-one>

        <field name="status" column="status" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="startDate" column="start_date" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="endDate" column="end_date" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

    </mapped-superclass>

</doctrine-mapping>
