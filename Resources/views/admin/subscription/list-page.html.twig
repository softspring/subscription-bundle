{% trans_default_domain 'sfs_subscription' %}

{% for subscription in entities %}
    <tr>
        <td>{{ subscription.customer.name|default('') }}</td>
        <td>{{ subscription.plan.name|default('') }}</td>
        <td class="{{ {35:'text-muted', 15:'text-success', 21:'text-warning'}[subscription.status] | default('') }}">
            {{ subscription.statusString }}
        </td>
        <td>{{ subscription.startDate ? subscription.startDate|date('d-m-Y') : '' }}</td>
        <td>{{ subscription.endDate ? subscription.endDate|date('d-m-Y') : '' }}</td>

        {% if read_route %}
            <td><a href="{{ url(read_route, {'subscription':subscription}) }}" class="text-nowrap">{{ 'admin_subscriptions.list.actions.details.button'|trans }}   <span class="mdi mdi-18px mdi-eye-outline align-middle"></span></a></td>
        {% endif %}
    </tr>
{% endfor %}