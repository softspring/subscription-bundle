{% trans_default_domain 'sfs_subscription' %}
{% extends '@SfsSubscription/admin_layout.html.twig' %}
{% block title %}{{ 'admin_plans.create.page_title'|trans }}{% endblock %}

{% block content %}
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3">Create plan</h1>
    </div>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_rest(form) }}
        <div class="d-flex justify-content-end align-items-center">
            <input type="submit" value="{{ 'admin_plans.create.actions.create.button'|trans }}" class="btn btn-primary ml-3" />
        </div>
    {{ form_end(form) }}
{% endblock content %}