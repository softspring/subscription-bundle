{% trans_default_domain 'sfs_subscription' %}
{% extends '@SfsSubscription/admin_layout.html.twig' %}
{% block title %}{{ 'admin_plans.list.page_title'|trans }}{% endblock %}

{% block content %}
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3">Plans</h1>

        {# TODO restrict by permission #}
        <div class="float-right">
            <a class="btn btn-light" href="{{ url('sfs_subscription_admin_plans_sync_all') }}">Sync all</a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">{{ 'admin_plans.list.fields.platform.header'|trans }}</th>
            <th scope="col">{{ 'admin_plans.list.fields.platformId.header'|trans }}</th>
            <th scope="col">{{ 'admin_plans.list.fields.active.header'|trans }}</th>
            <th scope="col">{{ 'admin_plans.list.fields.name.header'|trans }}</th>
            <th scope="col">{{ 'admin_plans.list.fields.product.header'|trans }}</th>
            <th scope="col">{{ 'admin_plans.list.fields.price.header'|trans }}</th>
{#            <th>&nbsp;</th>#}
        </tr>
        </thead>

        <tbody>
        {% include '@SfsSubscription/admin/plan/list-page.html.twig' %}
        </tbody>

        {% if entities.pages|default(false) %}
            <tfoot>
            <tr>
                <td colspan="20">
                    {% if entities.prevPage %}
                        <a href="{{ url('sfs_subscription_admin_plans_list', app.request.query.all|merge({ page: entities.prevPage })) }}" title="Prev page"><span class="mdi mdi-24px mdi-chevron-left"></span></a>
                    {% endif %}

                    {% if entities.nextPage %}
                        <a class="float-right" href="{{ url('sfs_subscription_admin_plans_list', app.request.query.all|merge({ page: entities.nextPage })) }}" title="Next page"><span class="mdi mdi-24px mdi-chevron-right"></span></a>
                    {% endif %}
                </td>
            </tr>
            </tfoot>
        {% endif %}
    </table>
{% endblock content %}